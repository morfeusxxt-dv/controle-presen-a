    transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
    transition-duration: 150ms;
  }
  
  .btn:focus {
    outline: 2px solid transparent;
    outline-offset: 2px;
    --tw-ring-offset-shadow: var(--tw-ring-inset) 0 0 0 var(--tw-ring-offset-width) var(--tw-ring-offset-color);
    --tw-ring-shadow: var(--tw-ring-inset) 0 0 0 calc(2px + var(--tw-ring-offset-width)) var(--tw-ring-color);
    box-shadow: var(--tw-ring-offset-shadow), var(--tw-ring-shadow), var(--tw-shadow, 0 0 #0000);
    --tw-ring-opacity: 1;
    --tw-ring-color: rgb(59 130 246 / var(--tw-ring-opacity));
    --tw-ring-offset-width: 2px;
  }
  
  .btn:disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }
  
  .btn-primary {
    background-color: #2563eb; /* blue-600 */
    color: white;
  }
  
  .btn-primary:hover {
    background-color: #1d4ed8; /* blue-700 */
  }
  
  .btn-secondary {
    background-color: #f3f4f6; /* gray-100 */
    color: #374151; /* gray-700 */
  }
  
  .dark .btn-secondary {
    background-color: #374151; /* gray-700 */
    color: white;
  }
  
  .btn-secondary:hover {
    background-color: #e5e7eb; /* gray-200 */
  }
  
  .dark .btn-secondary:hover {
    background-color: #4b5563; /* gray-600 */
  }
  
  /* Cards */
  .card {
    background-color: white;
    border-radius: 0.5rem;
    box-shadow: 0 1px 2px 0 rgb(0 0 0 / 0.05);
    overflow: hidden;
  }
  
  .dark .card {
    background-color: #1f2937; /* gray-800 */
  }
  
  /* Forms */
  .form-input {
    display: block;
    width: 100%;
    border-radius: 0.375rem;
    border: 1px solid #d1d5db; /* gray-300 */
    box-shadow: 0 1px 2px 0 rgb(0 0 0 / 0.05);
  }
  
  .dark .form-input {
    border-color: #4b5563; /* gray-600 */
    background-color: #374151; /* gray-700 */
    color: white;
  }
  
  .form-input:focus {
    border-color: #3b82f6; /* blue-500 */
    box-shadow: 0 0 0 1px #3b82f6; /* blue-500 */
  }
  
  .form-label {
    display: block;
    margin-bottom: 0.25rem;
    font-size: 0.875rem;
    font-weight: 500;
    color: #374151; /* gray-700 */
  }
  
  .dark .form-label {
    color: #d1d5db; /* gray-300 */
  }
  
  /* Alerts */
  .alert {
    padding: 1rem;
    border-radius: 0.375rem;
  }
  
  .alert-success {
    background-color: #ecfdf5; /* green-50 */
    color: #065f46; /* green-800 */
  }
  
  .dark .alert-success {
    background-color: rgba(6, 95, 70, 0.2); /* green-900/20 */
    color: #34d399; /* green-400 */
  }
  
  .alert-error {
    background-color: #fef2f2; /* red-50 */
    color: #991b1b; /* red-800 */
  }
  
  .dark .alert-error {
    background-color: rgba(153, 27, 27, 0.2); /* red-900/20 */
    color: #f87171; /* red-400 */
  }
  
  .alert-warning {
    background-color: #fffbeb; /* yellow-50 */
    color: #92400e; /* yellow-800 */
  }
  
  .dark .alert-warning {
    background-color: rgba(146, 64, 14, 0.2); /* yellow-900/20 */
    color: #fbbf24; /* yellow-400 */
  }
  
  .alert-info {
    background-color: #eff6ff; /* blue-50 */
    color: #1e40af; /* blue-800 */
  }
  
  .dark .alert-info {
    background-color: rgba(30, 64, 175, 0.2); /* blue-900/20 */
    color: #60a5fa; /* blue-400 */
  }
}

