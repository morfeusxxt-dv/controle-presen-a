  h1, h2, h3, h4, h5, h6 {
    @apply font-bold leading-tight tracking-tight text-gray-900 dark:text-white;
  }
  
  h1 { @apply text-4xl md:text-5xl; }
  h2 { @apply text-3xl md:text-4xl; }
  h3 { @apply text-2xl md:text-3xl; }
  h4 { @apply text-xl md:text-2xl; }
  h5 { @apply text-lg md:text-xl; }
  h6 { @apply text-base md:text-lg; }
  
  /* Links */
  a {
    @apply text-blue-600 hover:text-blue-800 dark:text-blue-400 dark:hover:text-blue-300 transition-colors duration-200;
  }
  
  /* Parágrafos */
  p {
    @apply mb-4 leading-relaxed text-gray-600 dark:text-gray-300;
  }
  
  /* Listas */
  ul, ol {
    @apply pl-5 mb-4;
  }
  
  ul {
    @apply list-disc;
  }
  
  ol {
    @apply list-decimal;
  }
  
  li {
    @apply mb-2;
  }
  
  /* Imagens */
  img, video {
    @apply max-w-full h-auto rounded-lg shadow-md;
  }
  
  /* Tabelas */
  table {
    @apply w-full border-collapse my-4;
  }
  
  th, td {
    @apply p-3 border border-gray-200 dark:border-gray-700;
  }
  
  th {
    @apply bg-gray-100 dark:bg-gray-800 font-semibold text-left;
  }
  
  /* Blocos de código */
  pre {
    @apply p-4 rounded-lg bg-gray-100 dark:bg-gray-800 overflow-x-auto my-4 text-sm;
  }
  
  code {
    @apply font-mono text-sm bg-gray-100 dark:bg-gray-800 px-1.5 py-0.5 rounded;
  }
  
  pre code {
    @apply bg-transparent p-0;
  }
  
  /* Blocos de citação */
  blockquote {
    @apply border-l-4 border-blue-500 pl-4 italic text-gray-600 dark:text-gray-400 my-4;
  }
  
  /* Linha horizontal */
  hr {
    @apply my-8 border-gray-200 dark:border-gray-700;
  }
}

/* Componentes personalizados */
@layer components {
  /* Botões */
  .btn {
    @apply inline-flex items-center justify-center px-5 py-2.5 text-sm font-medium rounded-lg transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 disabled:opacity-50 disabled:cursor-not-allowed;
  }
  
  .btn-primary {
    @apply bg-blue-600 text-white hover:bg-blue-700 focus:ring-blue-500;
  }
  
  .btn-secondary {
    @apply bg-gray-200 text-gray-700 hover:bg-gray-300 focus:ring-gray-500 dark:bg-gray-700 dark:text-white dark:hover:bg-gray-600;
  }
  
  .btn-success {
    @apply bg-green-600 text-white hover:bg-green-700 focus:ring-green-500;
  }
  
  .btn-danger {
    @apply bg-red-600 text-white hover:bg-red-700 focus:ring-red-500;
  }
  
  /* Cards */
  .card {
    @apply bg-white dark:bg-gray-800 rounded-xl shadow-md overflow-hidden border border-gray-200 dark:border-gray-700;
  }
  
  .card-header {
    @apply px-6 py-4 border-b border-gray-200 dark:border-gray-700;
  }
  
  .card-body {
    @apply p-6;
  }
  
  .card-footer {
    @apply px-6 py-4 border-t border-gray-200 dark:border-gray-700 bg-gray-50 dark:bg-gray-800/50;
  }
  
  /* Formulários */
  .form-group {
    @apply mb-4;
  }
  
  .form-label {
    @apply block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1;
  }
  
  .form-control {
    @apply block w-full px-4 py-2 text-gray-900 bg-white border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 transition duration-200;
  }
  
  .form-text {
    @apply mt-1 text-sm text-gray-500 dark:text-gray-400;
  }
  
  /* Alertas */
  .alert {
    @apply p-4 mb-4 rounded-lg border;
  }
  
  .alert-success {
    @apply text-green-700 bg-green-100 border-green-300 dark:bg-green-200 dark:text-green-800;
  }
  
  .alert-danger {
    @apply text-red-700 bg-red-100 border-red-300 dark:bg-red-200 dark:text-red-800;
  }
  
  .alert-warning {
    @apply text-yellow-700 bg-yellow-100 border-yellow-300 dark:bg-yellow-200 dark:text-yellow-800;
  }
  
  .alert-info {
    @apply text-blue-700 bg-blue-100 border-blue-300 dark:bg-blue-200 dark:text-blue-800;
  }
  
  /* Badges */
  .badge {
    @apply inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium;
  }
  
  .badge-primary {
    @apply bg-blue-100 text-blue-800 dark:bg-blue-200 dark:text-blue-900;
  }
  
  .badge-secondary {
    @apply bg-gray-100 text-gray-800 dark:bg-gray-200 dark:text-gray-900;
  }
  
  .badge-success {
    @apply bg-green-100 text-green-800 dark:bg-green-200 dark:text-green-900;
  }
  
  .badge-danger {
    @apply bg-red-100 text-red-800 dark:bg-red-200 dark:text-red-900;
  }
  
  .badge-warning {
    @apply bg-yellow-100 text-yellow-800 dark:bg-yellow-200 dark:text-yellow-900;
  }
  
  .badge-info {
    @apply bg-blue-100 text-blue-800 dark:bg-blue-200 dark:text-blue-900;
  }
}

/* Animações */
@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

@keyframes slideInUp {
  from { 
    transform: translateY(20px);
    opacity: 0;
  }
  to { 
    transform: translateY(0);
    opacity: 1;
  }
}

/* Utilidades personalizadas */
.animate-fade-in {
  animation: fadeIn 0.3s ease-in-out;
}

.animate-slide-up {
  animation: slideInUp 0.3s ease-out forwards;
}

/* Estilos para impressão */
@media print {
  body {
    background: white;
    color: black;
    font-size: 12pt;
  }
  
  .no-print {
    display: none !important;
  }
  
  a {
    text-decoration: none;
    color: inherit;
  }
  
  @page {
    margin: 2cm;
  }
}

/* Estilos para dispositivos móveis */
@media (max-width: 768px) {
  input, textarea, select {
    font-size: 16px !important; /* Evita o zoom automático no iOS */
  }
  
  /* Ajusta o tamanho da fonte para inputs específicos */
  input[type="text"],
  input[type="email"],
  input[type="tel"],
  input[type="password"],
  textarea {
    font-size: 16px !important;
  }
  
  /* Ajusta o tamanho do texto de placeholder */
  ::placeholder {
    font-size: 14px;
  }
}

/* Melhora a aparência do foco */
input:focus, textarea:focus, select:focus {
  outline: none;
  border-color: #4299e1;
  box-shadow: 0 0 0 3px rgba(66, 153, 225, 0.5);
}

/* Remove o ícone de olho padrão do Chrome em campos de senha */
input[type="password"]::-ms-reveal,
input[type="password"]::-ms-clear {
  display: none;
}
